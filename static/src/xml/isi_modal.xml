<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_order_success_modal" owl="1">
        <Dialog title="props.title || '¡Orden Confirmada!'">
            <p>
                La orden <t t-esc="props.orderName"/> ha sido registrada con éxito.
                <t t-if="props.isInvoice">
                    <br/>La factura será generada.
                </t>
            </p>
            <div class="text-center mt-4">
                <button class="btn btn-primary" t-on-click="confirm">
                    Aceptar
                </button>
            </div>
        </Dialog>
    </t>
</templates>